<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="14.0" DefaultTargets="Build" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <Import
    Project="$(MSBuildExtensionsPath)/$(MSBuildToolsVersion)/Microsoft.Common.props"
    Condition="Exists('$(MSBuildExtensionsPath)/$(MSBuildToolsVersion)/Microsoft.Common.props')"
    />

  <PropertyGroup>
    <AssemblyName>LD58 - Crunch Time</AssemblyName>
    <RootNamespace>LD58</RootNamespace>
    <ProjectGuid>{ADFC01E7-7D26-4518-8403-C1164AD3B0EF}</ProjectGuid>

    <ChaosPresets_References>../submodules/ChaosPresets.References</ChaosPresets_References>
    <ChaosPresets_Targets>../submodules/ChaosPresets.Targets</ChaosPresets_Targets>
  </PropertyGroup>

  <!-- Properties -->
  <Import Project="$(ChaosPresets_Targets)/Properties/Executable.targets" />
  <Import Project="$(ChaosPresets_Targets)/Paths/Output/Branch-Platform-Config.targets" />

  <!-- Configuration and Platform -->
  <Import Project="$(ChaosPresets_Targets)/Configurations.targets" />
  <PropertyGroup Condition=" '$(Platform)' == 'x86' " />
  <PropertyGroup Condition=" '$(Platform)' == 'x64' " />

  <!-- Included Files -->
  <ItemGroup>
    <Compile Include="source\**\*.cs" />
    <Compile Include="Properties\AssemblyInfo.cs" />

    <None Include="assets\**" />

    <None Include="packages.config" />
    <None Include="OpenTK.dll.config" />

    <Compile Include="Properties\Resources.Designer.cs">
      <AutoGen>True</AutoGen>
      <DesignTime>True</DesignTime>
      <DependentUpon>Resources.resx</DependentUpon>
    </Compile>

    <EmbeddedResource Include="Properties\Resources.resx">
      <Generator>ResXFileCodeGenerator</Generator>
      <LastGenOutput>Resources.Designer.cs</LastGenOutput>
    </EmbeddedResource>
  </ItemGroup>

  <!-- References -->
  <Import Project="$(ChaosPresets_References)/ProjectReferences/ChaosUtil.Debug.targets" />
  <Import Project="$(ChaosPresets_References)/ProjectReferences/ChaosUtil.Platform.targets" />
  <Import Project="$(ChaosPresets_References)/ProjectReferences/ChaosUtil.Platform.Windows.targets" />
  <Import Project="$(ChaosPresets_References)/ProjectReferences/ChaosUtil.Primitives.targets" />
  <Import Project="$(ChaosPresets_References)/ProjectReferences/ChaosUtil.Reflection.targets" />
