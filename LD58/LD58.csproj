  <Import Project="$(ChaosPresets_References)/ProjectReferences/ChaosFramework.Components.targets" />
  <Import Project="$(ChaosPresets_References)/ProjectReferences/ChaosFramework.Core.targets" />
  <Import Project="$(ChaosPresets_References)/ProjectReferences/ChaosFramework.Input.targets" />
  <Import Project="$(ChaosPresets_References)/ProjectReferences/ChaosFramework.Input.RawInput.targets" />
  <Import Project="$(ChaosPresets_References)/ProjectReferences/ChaosFramework.Input.RawInput.Sharp.targets" />
  <Import Project="$(ChaosPresets_References)/ProjectReferences/ChaosFramework.IO.targets" />
  <Import Project="$(ChaosPresets_References)/ProjectReferences/ChaosFramework.Math.targets" />
  <Import Project="$(ChaosPresets_References)/ProjectReferences/ChaosFramework.Shapes.targets" />
