  <!-- <Import Project="$(ChaosPresets_References)/ProjectReferences/ChaosFramework.Sound.OpenAL.targets" /> -->
  <ItemGroup>
    <Reference Include="System" />
    <Reference Include="System.Drawing" />
    <Reference Include="System.Windows.Forms" />

    <Reference Include="ChaosFramework.Graphics">
      <HintPath>..\libs\ChaosFramework.Graphics\ChaosFramework.Graphics.dll</HintPath>
    </Reference>
    <Reference Include="ChaosFramework.Graphics.OpenGL">
      <HintPath>..\libs\ChaosFramework.Graphics.OpenGL\ChaosFramework.Graphics.OpenGL.dll</HintPath>
    </Reference>

    <Reference Include="OpenTK, Version=3.0.1.0, Culture=neutral, PublicKeyToken=bad199fe84eb3df4, processorArchitecture=MSIL">
      <HintPath>$(SolutionDir)\packages\OpenTK.3.0.1\lib\net20\OpenTK.dll</HintPath>
      <Private>True</Private>
    </Reference>
    <Reference Include="OpenTK.GLControl, Version=3.0.1.0, Culture=neutral, PublicKeyToken=bad199fe84eb3df4, processorArchitecture=MSIL">
      <HintPath>$(SolutionDir)\packages\OpenTK.GLControl.3.0.1\lib\net20\OpenTK.GLControl.dll</HintPath>
      <Private>True</Private>
    </Reference>
  </ItemGroup>

  <!-- Analyzers -->
  <Import Project="$(ChaosPresets_References)/Analyzers/ChaosAnalyzers.CleanCode.targets" />

  <!-- Cleanup Task -->
  <Import Project="$(ChaosPresets_References)/BuildTasks/ChaosBuild.CodeFormatter.Tasks.ChangedProjectFiles.targets" />

  <UsingTask
    TaskName="ChaosArchive"
    AssemblyFile="$(SolutionDir)/submodules/ChaosFrameworkBuild.ArchiveCreator/build/bin/ChaosFrameworkBuild.ArchiveCreator.dll"
    />

  <Target
    Name="CreateArchive"
    BeforeTargets="BeforeBuild"
    >
    <ChaosArchive
      SourceFolder="assets"
      TargetFile="Assets.cha"
      OutputPath="$(OutputPath)"
      IntermediateOutputPath="$(IntermediateOutputPath)"
      />
  </Target>

  <!-- Default Targets for Building CSharp Projects -->
  <Import Project="$(MSBuildToolsPath)\Microsoft.CSharp.targets" />
